
@{
    ViewBag.Title = "DSPhongBan";
}

<style>
    .main-footer {
        flex-shrink: 0;
        background-color: #ddeeff;
        width: 100%;
        height: 40px;
        position: fixed;
        bottom: 0;
        left: 0;
        font-size: small;
    }

    body {
        font-family: Arial, sans-serif;
        background-color: #f4f4f4;
        margin: 0;
        padding: 0;
    }

    .container {
        max-width: 800px;
        margin: 20px auto;
        padding: 20px;
        background-color: #fff;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    h1 {
        text-align: center;
    }

    .department {
        margin-bottom: 20px;
        border: 1px solid #ddd;
        border-radius: 8px;
        padding: 10px;
        background-color: #f9f9f9;
    }

    .employees {
        margin-left: 20px;
    }

    select {
        padding: 10px;
        font-size: 16px;
        border-radius: 5px;
        border: 1px solid #ddd;
    }
</style>
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Trang chủ</a></li>
                        <li class="breadcrumb-item"><a href="#">Người dùng</a></li>
                        <li class="breadcrumb-item active">Danh sách phòng ban</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <!-- Main content -->
    <div class="container">
        <h1>Danh sách phòng ban</h1>

        <div class="filter">
            <h2>Bộ lọc</h2>
            <select id="departmentFilter">
                <option value="">Chọn phòng ban</option>
                <option value="A">Phòng ban A</option>
                <option value="B">Phòng ban B</option>
                <option value="C">Phòng ban C</option>
            </select>
        </div>

        <div id="departments">
            <!-- Phòng ban 1 -->
            <div class="department" id="department-A">
                <h2>Phòng ban A</h2>
                <div class="employees">
                    <ul>
                        <li>Nhân viên A1</li>
                        <li>Nhân viên A2</li>
                        <li>Nhân viên A3</li>
                    </ul>
                </div>
            </div>

            <!-- Phòng ban 2 -->
            <div class="department" id="department-B">
                <h2>Phòng ban B</h2>
                <div class="employees">
                    <ul>
                        <li>Nhân viên B1</li>
                        <li>Nhân viên B2</li>
                        <li>Nhân viên B3</li>
                    </ul>
                </div>
            </div>

            <!-- Phòng ban 3 -->
            <div class="department" id="department-C">
                <h2>Phòng ban C</h2>
                <div class="employees">
                    <ul>
                        <li>Nhân viên C1</li>
                        <li>Nhân viên C2</li>
                        <li>Nhân viên C3</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Control Sidebar -->
<aside class="control-sidebar control-sidebar-dark">
    <!-- Control sidebar content goes here -->
</aside>
<!-- /.control-sidebar -->

<script>
            // Lấy select box bộ lọc
            var filter = document.getElementById('departmentFilter');

            // Gắn sự kiện onchange để lọc danh sách
            filter.addEventListener('change', function () {
                var selectedDepartment = this.value;

                // Lặp qua tất cả các phòng ban và ẩn/hiện tùy thuộc vào giá trị được chọn
                var departments = document.getElementsByClassName('department');
                for (var i = 0; i < departments.length; i++) {
                    var department = departments[i];
                    if (selectedDepartment === '' || department.id === 'department-' + selectedDepartment) {
                        department.style.display = 'block';
                    } else {
                        department.style.display = 'none';
                    }
                }
            });
</script>

